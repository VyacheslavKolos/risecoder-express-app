{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "node/no-missing-import": "off", // Disable this rule if needed
        "node/no-unpublished-import": "off", // Disable this rule if needed
        "node/no-unsupported-features/es-syntax": "off", // Disable this rule if needed
        "prettier/prettier": "error"
    }
}
